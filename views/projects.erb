<form class="form-display" action="/projects/search" method="get">
  <label>Find a project:</label>
  <div class="form-field">
    <input type="text" name="search" placeholder="search">
  </div>
  <button type="submit" class="btn btn-dark" name="button">Search</button>
</form>

<% if @projects.any? %>
  <h3>Projects:</h3>
  <ul>
    <% @projects.each do |project| %>
      <li>
        <a href="/projects/<%= project.id %>"><%= project.title %></a>
      </li>
    <% end %>
  </ul>
<% else %>
  <h3>There are no projects yet!</h3>
<% end %>
<form class="form-display" action="/projects" method="post">
  <label>Create a new project:</label>
  <div class="form-field">
    <input type="text" name="title" placeholder="title">
  </div>
  <button type="submit" class="btn btn-dark" name="button">Create Project</button>
</form>
